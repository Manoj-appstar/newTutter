<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addservicelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_icon" />

                <TextView
                    android:id="@+id/tvAddYourClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/ivBack"
                    android:text="Add Your Class"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:id="@+id/llAddClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivBack"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvInstituteNmae"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center"
                            android:text="class name"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center"
                            android:text="Branch:"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tvBranchName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center"
                            android:text="class name"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/llData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Batch Name"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/BatchName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/ic_underline"
                                    android:gravity="center_vertical"
                                    android:hint="Ayushman class...."
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Class Name"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <AutoCompleteTextView
                                    android:id="@+id/AddClass"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/ic_underline"
                                    android:gravity="center_vertical"
                                    android:hint="1st class,2nd Class,etc..."
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/tvSubject"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Subject"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <AutoCompleteTextView
                                    android:id="@+id/AddSubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/ic_underline"
                                    android:hint="Math,Physics,etc..."
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />


                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvAddSubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp" />

                                <TextView
                                    android:id="@+id/tvAddMoreSub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center|right"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Add More Subject"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvTeacherAssigned"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Teacher Assigned"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <FrameLayout
                                    android:id="@+id/frameLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <AutoCompleteTextView
                                        android:id="@+id/addTeacherAssigned"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_34sdp"
                                        android:layout_marginLeft="@dimen/_3sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:hint="Type name,email or phone..."
                                        android:imeOptions="actionNext"
                                        android:textColor="@color/hint_color"
                                        android:textSize="@dimen/_10sdp" />

                                    <ProgressBar
                                        android:id="@+id/progress"
                                        style="@style/AppTheme.BlueAccent"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_gravity="center|right"
                                        android:layout_margin="@dimen/_10sdp"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:indeterminateTint="@color/grey_800"
                                        android:theme="@style/AppTheme.BlueAccent"
                                        android:visibility="visible" />

                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:text="Starting Date"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/AddDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:background="@drawable/ic_underline"
                                            android:imeOptions="actionNext"
                                            android:gravity="center_vertical"
                                            android:hint="28-August-2018"
                                            android:textColor="@color/hint_color"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:text="End Date"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvEndDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_3sdp"
                                            android:imeOptions="actionNext"
                                            android:background="@drawable/ic_underline"
                                            android:gravity="center_vertical"
                                            android:hint="28-August-2018"
                                            android:textColor="@color/hint_color"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="Timing"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:orientation="horizontal"
                                    android:textSize="@dimen/_10sdp"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/AddTimeTo"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginRight="2dp"
                                        android:layout_weight="1"
                                        android:imeOptions="actionNext"
                                        android:background="@drawable/ic_underline"
                                        android:gravity="center_vertical"
                                        android:hint="From"
                                        android:textColor="@color/hint_color"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/AddTimeFrom"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/ic_underline"
                                        android:gravity="center_vertical"
                                        android:hint="To"
                                        android:imeOptions="actionNext"
                                        android:textColor="@color/hint_color"
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/_200sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:text="Select class days in a week"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/tvDays"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/ic_underline"
                                    android:cursorVisible="false"
                                    android:editable="false"
                                    android:enabled="true"
                                    android:hint="Choose days from dialog"
                                    android:imeOptions="actionNext"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:text="Student Limit"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/AddLimit"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/ic_underline"
                                    android:hint="20,30,etc..."
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />


                                <EditText
                                    android:id="@+id/etClassPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:background="@drawable/ic_underline"
                                    android:hint="Class contact number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_underline">

                                    <TextView
                                        android:id="@+id/tvRupee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="@dimen/_3sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:text="₹"
                                        android:textSize="@dimen/_15sdp" />

                                    <EditText
                                        android:id="@+id/etPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="@dimen/_3sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_toRightOf="@+id/tvRupee"
                                        android:background="@android:color/transparent"
                                        android:hint="Cost for this class"
                                        android:imeOptions="actionNext"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:textColor="@color/hint_color"
                                        android:textSize="@dimen/_10sdp" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="@dimen/_250sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:text="Add Your Class Location"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/AddLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/ic_underline"
                                    android:gravity="center_vertical"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <Switch
                                    android:id="@+id/switch1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:showText="true"
                                    android:text="Services"
                                    android:textColor="@color/colorPrimary"
                                    android:textOff="Diable"
                                    android:textOn="Enable"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <!--android:background="@drawable/ic_spin_category"-->
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/llData"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="Add Images"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <com.appstar.avatar.TinderRecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:clipToPadding="true"
                                android:minHeight="@dimen/_300sdp"
                                android:nestedScrollingEnabled="false"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cvAddClass"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_below="@+id/llImage"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvAddClass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Add class"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />

                                <ProgressBar
                                    android:id="@+id/progress_data"
                                    style="@style/AppTheme.BlueAccent"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="center|right"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:indeterminateTint="@color/white"
                                    android:theme="@style/AppTheme.BlueAccent"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>