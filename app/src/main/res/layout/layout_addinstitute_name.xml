<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey_300"
    android:gravity="center">

    <FrameLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="match_parent"
        android:background="@color/grey_300">

        <LinearLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_100sdp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_20sdp">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Institute Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etInstituteName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="left|center"
                            android:hint="Akash Institute"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:inputType="textCapSentences"
                            android:textColor="@color/hint_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Website link (if you have) not mandatory"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etWebsite"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="left|center"
                            android:hint="http://"
                            android:imeOptions="actionNext"
                            android:maxLength="60"
                            android:inputType="textCapSentences"
                            android:textColor="@color/hint_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Description"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/etInstituteLocation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="left"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_black_corner"
                            android:gravity="center"
                            android:maxLength="100"
                            android:imeOptions="actionDone"
                            android:hint="Enter your description here"
                            android:textColor="@color/hint_color"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cvCancel"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                app:cardBackgroundColor="@color/blue_login_color"
                                app:cardCornerRadius="@dimen/_3sdp">

                                <TextView
                                    android:id="@+id/tvCancel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Cancel"
                                    android:textColor="@color/white" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cvAdd"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/blue_login_color"
                                app:cardCornerRadius="@dimen/_3sdp">

                                <TextView
                                    android:id="@+id/tvAdd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Add"
                                    android:textColor="@color/white" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivInstituteIMage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/_50sdp"
                app:civ_border_width="@dimen/_4sdp"
                app:civ_border_color="@color/white"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/temp_profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAddImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_115sdp"
                android:background="@drawable/ic_ringlight_white"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_add" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
