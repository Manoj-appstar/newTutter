<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_320sdp"
    android:layout_height="@dimen/_160sdp"
    android:layout_gravity="center"
    android:padding="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="-40dp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="1.5"
            android:gravity="left">

            <android.support.v7.widget.CardView
                android:id="@+id/cvCardIndividual"
                android:layout_width="@dimen/_255sdp"
                android:layout_height="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:id="@+id/tvIndividualClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:paddingRight="@dimen/_20sdp"
                    android:text="Individual"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sdp" />


            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="-40dp"
            android:layout_weight="1.5"
            android:gravity="right">

            <android.support.v7.widget.CardView
                android:id="@+id/cvCardInstitute"
                android:layout_width="@dimen/_255sdp"
                android:layout_height="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/tvInsitituteClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:paddingLeft="@dimen/_20sdp"
                    android:text="Institute"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sdp" />


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>