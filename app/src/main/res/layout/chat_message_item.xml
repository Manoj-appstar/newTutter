<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/msg_out_dark_blue"
            android:gravity="right"
            android:minWidth="@dimen/_75sdp"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvFromMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="right"
                android:fontFamily="@font/new_comic_font"
                android:minWidth="@dimen/_60sdp"
                android:text="Hi g d gfg dfgdfgdgdfd fdfg "
                android:textColor="#fff"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="right">


                    <TextView
                        android:id="@+id/tvFromTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="11:10 PM"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgStatus"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:padding="@dimen/_1sdp"

                        android:src="@mipmap/status0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/temp_profile" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/temp_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@mipmap/msg_in"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvToMsg"
                android:layout_width="wrap_content"
                android:fontFamily="@font/new_comic_font"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="left"
                android:minWidth="@dimen/_60sdp"
                android:text="Hi hello how are you"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvToTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:gravity="right"
                android:text="11:10 PM"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>