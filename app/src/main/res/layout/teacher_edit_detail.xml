<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_dialog"
    android:gravity="left"
    android:minWidth="@dimen/_270sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Graduation"
        android:textColor="@color/new_text_color"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etGraduationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Type Graduation ex. B.tech, BA, B.com"
            android:textSize="@dimen/_10sdp"
            android:theme="@style/MyEditTextTheme_Blue" />

        <ImageView
            android:id="@+id/ivtypeGraduation"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etGraduationDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Graduation Detail"
            android:textSize="@dimen/_10sdp"
            android:theme="@style/MyEditTextTheme_Blue" />

        <ImageView
            android:id="@+id/ivGraduationDetail"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Post Graduation"
        android:textColor="@color/new_text_color"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPostGraduationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Type Post Graduation ex. M.tech, MA, M.com"
            android:textSize="@dimen/_10sdp"
            android:theme="@style/MyEditTextTheme_Blue" />


        <ImageView
            android:id="@+id/ivTypePostGraduation"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPostGraduationDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Post Graduation Detail"
            android:textSize="@dimen/_10sdp"
            android:theme="@style/MyEditTextTheme_Blue" />

        <ImageView
            android:id="@+id/ivPostGraduationDetail"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Others"
        android:textColor="@color/new_text_color"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:hint="Type Others detail if you have any extra important detail"
        android:textSize="@dimen/_10sdp"
        android:theme="@style/MyEditTextTheme_Blue" />

    <EditText
        android:id="@+id/etSpecialist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/round_editext_blue"
        android:gravity="left|top"
        android:hint="Write somethings about your self"
        android:maxLength="500"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:theme="@style/MyEditTextTheme_Blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cvCancel"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardBackgroundColor="@color/blue_login_color"
            app:cardCornerRadius="@dimen/_3sdp">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/c"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            app:cardBackgroundColor="@color/blue_login_color"
            app:cardCornerRadius="@dimen/_3sdp">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/white" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp" />


</LinearLayout>