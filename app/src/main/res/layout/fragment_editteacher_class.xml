<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addservicelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.appstar.tutionportal.views.MyTextView
                android:id="@+id/btnSaveClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="right"
                android:text="Save"
                android:textColor="@color/colorPrimary" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Batch"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/AddClass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/ic_underline"
                                android:gravity="center_vertical"
                                android:hint="1st class,2nd Class,etc..."
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Subject"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/AddSubject"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/ic_underline"
                                android:hint="Math,Physics,etc..."
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Starting Date"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/AddDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/ic_underline"
                                android:gravity="center_vertical"
                                android:hint="28-August-2018"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Timing"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal"
                                android:textSize="@dimen/_10sdp"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/AddTimeTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_underline"
                                    android:gravity="center_vertical"
                                    android:hint="From"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/AddTimeFrom"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_underline"
                                    android:gravity="center_vertical"
                                    android:hint="To"
                                    android:textColor="@color/hint_color"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <TextView

                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Student Limit"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/AddLimit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/ic_underline"
                                android:hint="20,30,etc..."
                                android:inputType="number"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Add Your Class Location"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/AddLocation"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/ic_underline"
                                android:gravity="center_vertical"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_10sdp" />

                            <Switch
                                android:id="@+id/switch1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:text="Services"
                                android:textColor="@color/colorPrimary"
                                android:textOn="On"
                                android:textStyle="bold" />

                            <HorizontalScrollView
                                android:id="@+id/horizontalScrollview"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_120sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/dynamic_create_add_image_recycle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_120sdp"
                                        android:orientation="horizontal">

                                    </android.support.v7.widget.RecyclerView>

                                    <LinearLayout
                                        android:id="@+id/linear_addImage"
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:focusable="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/iv_add_image"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_plus_button" />

                                        <TextView
                                            android:id="@+id/txt_add_image"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="Add Image"
                                            android:textColor="@color/colorPrimary" />

                                    </LinearLayout>
                                </LinearLayout>
                            </HorizontalScrollView>
                            <!--android:background="@drawable/ic_spin_category"-->
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>