<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llDiaogGroup"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:minWidth="320sp"
    android:background="@drawable/round_corner_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Join Group"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="left"
            android:text="Type valid 6 digit group code and join group."
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_13sdp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/textColor"
            android:textStyle="normal"
            android:theme="@style/TextLabel_textcolor"
            android:textColorHint="@color/textColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etGroupCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Group Code"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/textColor"
                android:textStyle="normal"
                android:theme="@style/MyEditTextTheme_textcolor"
                android:textColor="@color/textColor" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_login_bg"
            android:text="Join Group"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Cancel"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>