<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <!--<item name="colorControlNormal">@color/colorPrimary</item>-->
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">3</item>
        <!--<item name="android:layout_height">22dp</item>-->
        <!--<item name="android:layout_width">22dp</item>-->
        <!--<item name="android:minHeight">22dp</item>-->
        <!--<item name="android:maxHeight">22dp</item>-->
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#fefeff</item>
    </style>

    <style name="MyEditTextTheme_textcolor">
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/text_color</item>
        <item name="colorControlHighlight">@color/text_color</item>

    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/colorAccent</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black_bg</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black_bg</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextColor">@color/black_bg</item>


    </style>


    <style name="MyEditTextTheme_Blue">
        <item name="colorControlNormal">@color/blue_login_color</item>
        <item name="colorControlActivated">@color/blue_login_color</item>
        <item name="colorControlHighlight">@color/blue_login_color</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="TextLabel_colorprimary" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="TextLabel_textcolor" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColor</item>
        <item name="colorAccent">@color/textColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_down</item>
    </style>


    <style name="EditTextHint" parent="TextAppearance.AppCompat">

        <item name="colorControlActivated">@color/red_800</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorAccent
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#333333
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/yellow_700</item>
    </style>

</resources>
